generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  name String 
  email String @unique
  password String
  avatar String
  created_at DateTime
  userOne Conversation[] @relation("user_one")
  userTwo Conversation[] @relation("user_two")

  sender Message[] @relation("sender")
}

model Conversation {
  id String @unique
  userOneId Int
  userOne User @relation(name:"user_one", fields: [userOneId], references: [id])
  userTwoId Int
  userTwo User @relation(name: "user_two", fields: [userTwoId], references: [id])
  messages Message[] @relation("chat")

  @@id([id, userOneId, userTwoId])
}

model Message {
  id Int @default(autoincrement()) @id
  senderId Int
  sender User @relation(name: "sender", fields: [senderId], references: [id])
  message String
  edited Boolean @default(false)
  unread Boolean @default(true)
  fileUrl String?
  fileType String?
  created_at DateTime
  conversationId String
  conversation Conversation @relation(name: "chat", fields: [conversationId], references: [id])
}
